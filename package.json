{
  "name": "slack-bolt-oauth-install",
  "description": "",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm-run-all install:*",
    "install:dynamodb": "sls dynamodb install",
    "start": "yarn build && yarn serve",
    "build": "source .env && sls package --stage ${STAGE:-dev}",
    "serve": "source .env && npm-run-all start:offline",
    "start:offline": "NODE_OPTIONS=--max-old-space-size=4096 IS_OFFLINE=true sls offline start --noTimeout -v",
    "deploy": "source .env && sls deploy --stage ${STAGE:-dev} --force",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-types": "tsc --noEmit",
    "eslint": "eslint 'src/**/*.ts{,x}'",
    "eslint:fix": "eslint 'src/**/*.ts{,x}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,json}'",
    "eslint-conflict-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format"
  },
  "dependencies": {
    "@slack/bolt": "^2.5.0",
    "aws-sdk": "^2.784.0",
    "aws-serverless-express": "^3.3.8",
    "aws-xray-sdk": "^3.2.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.64",
    "@types/aws-sdk": "^2.7.0",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/eslint": "^7.2.4",
    "@types/express": "^4.17.8",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "aws-lambda": "^1.0.6",
    "circular-dependency-plugin": "^5.2.0",
    "dotenv": "8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsdoc": "^30.7.6",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "serverless": "^2.9.0",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.5",
    "webpack": "^4.44.1"
  }
